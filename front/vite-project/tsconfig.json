{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "allowJs": true,
    "checkJs": false,

    "strict": false,

    "isolatedModules": true,
    "noEmit": true,

    "skipLibCheck": true
  },
  "include": ["src"]
}