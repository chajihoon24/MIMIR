{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "jsx": "react-jsx",

        "allowJs": true,
        "checkJs": false,

        "strict": false,

        "isolatedModules": true,
        "noEmit": true,

        "skipLibCheck": true
    },
    "include": ["src"]
}
